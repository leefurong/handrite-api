<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <CheckBox
            android:id="@+id/enableTextAppend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="append text:" />
        <EditText
            android:id="@+id/textForAppend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" >
        </EditText>
        <CheckBox
            android:id="@+id/enableImageAppend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="append image:" />
        <TextView
            android:id="@+id/imageAppendUri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/enableSetLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="set label:" />
        <EditText
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <requestFocus />
        </EditText>
        <Button
            android:id="@+id/btnStartHandrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="start Handrite" />
        <ImageView
            android:id="@+id/noteImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</ScrollView>